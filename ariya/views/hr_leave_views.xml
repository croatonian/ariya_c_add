        <field name="name">hr.leave.form.inherit</field>

        <field name="model">hr.leave</field>

        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>

        <field name="arch" type="xml">

        <field name="holiday_status_id" position="after">

            <field name="leave_type_name" invisible = "true"/>
            <field name="employee_buh_id" invisible = "true"/>
            <field name="reason" invisible = "leave_type_name != 'Відрядження'" />
            <field name="location" invisible = "leave_type_name != 'Відрядження'" />
            <field name="reason_name" invisible = "true"/>
            <field name="location_name" invisible = "true"/>
